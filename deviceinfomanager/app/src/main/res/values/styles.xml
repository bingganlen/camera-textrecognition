<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="InputBindPhoneStyle">
        <item name="android:layout_marginTop">@dimen/dim20</item>
        <item name="android:padding">@dimen/dim40</item>
        <item name="android:background">@drawable/bg_btn_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/txt26</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:textColorHint">@color/colorText3</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim100</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt44</item>
    </style>

    <style name="ButtonStyle1" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="ButtonStyle2" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_user_login</item>
    </style>
    <!--Dialog的自定义位置显示-->
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>



    <style name="input_ll">
        <item name="android:layout_marginTop">@dimen/dim1</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/dim10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="input_title">
        <item name="android:layout_width">@dimen/dim160</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText1</item>
        <item name="android:textSize">@dimen/dim30</item>
    </style>

    <style name="input_text_value">
        <item name="android:layout_width">@dimen/dim60</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dim10</item>
        <item name="android:background">@null</item>
        <!--<item name="android:maxLines">1</item>-->
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:textColorHint">@color/colorText3</item>
        <item name="android:textSize">@dimen/txt30</item>
    </style>

    <style name="input_right_icon">
        <item name="android:src">@drawable/ic_right</item>
        <item name="android:layout_width">@dimen/dim13</item>
        <item name="android:layout_height">@dimen/dim26</item>
        <item name="android:layout_marginRight">@dimen/dim30</item>
    </style>

    <style name="item_text_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt34</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_text">
        <item name="android:textSize">@dimen/txt24</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="item_right_tag">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/txt40</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/dim90</item>
        <item name="android:layout_height">@dimen/dim90</item>
    </style>




    <!--textHead1-->
    <style name="TextHint1">
        <item name="android:textColorHint">@color/colorGray</item>
    </style>
    <!--textHead1-->
    <style name="TextHead1" parent="TextHint1">
        <item name="android:textColor">@color/colorText1</item>
        <item name="android:textSize">@dimen/txt44</item>
    </style>
    <!--textHead2-->
    <style name="TextHead2" parent="TextHead1">
        <item name="android:textSize">@dimen/txt36</item>
    </style>
    <!--textHead3-->
    <style name="TextHead3" parent="TextHead1">
        <item name="android:textSize">@dimen/txt28</item>
    </style>
    <!--newtextHead3-->
    <style name="NewTextHead31" parent="TextHead1">
        <item name="android:textSize">@dimen/txt32</item>
    </style>

    <!--new textHead3-->
    <style name="NewTextHead3" parent="TextHead1">
        <item name="android:textSize">@dimen/txt24</item>
    </style>
    <!--textHead3-->
    <style name="TextTab" >
        <item name="android:textColor">@color/colorText1</item>
        <item name="android:textSize">@dimen/txt28</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextHeadMessage">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt30</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:padding">@dimen/dim10</item>
        <item name="android:background">@color/colorYellow1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Popuwindow">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="QuestionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dim20</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt44</item>
    </style>

    <style name="QuestionSelect">
        <item name="android:padding">@dimen/dim10</item>
        <item name="android:textSize">@dimen/dim40</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactTitle">
        <item name="android:padding">@dimen/dim10</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:textSize">@dimen/txt44</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
