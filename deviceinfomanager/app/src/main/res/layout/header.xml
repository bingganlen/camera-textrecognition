<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim90"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/colorHeaderBg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/header_back_btn"
        android:layout_width="@dimen/dim90"
        android:layout_height="match_parent"
        android:padding="@dimen/dim15"
        android:visibility="gone"
        tool:visibility="visible"
        android:src="@drawable/header_back_btn_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/header_home_btn"
            android:layout_width="@dimen/dim90"
            android:layout_height="match_parent"
            android:padding="@dimen/dim15"
            android:visibility="gone"
            tool:visibility="visible"
            android:src="@android:drawable/ic_menu_search" />

        <TextView
            android:id="@+id/tv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:padding="@dimen/dim10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt34"
            android:visibility="gone"
            tool:visibility="visible"
            tool:text="right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dim90"
        android:layout_marginRight="@dimen/dim90">

        <ImageView
            android:id="@+id/header_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/dim15"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt40"
            android:visibility="visible" />

        <EditText
            android:id="@+id/header_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim60"
            android:background="@drawable/bg_title_search_shape"
            android:gravity="center"
            android:hint="搜索内容"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/dim5"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorGray"
            android:textSize="@dimen/txt28"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tool:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>